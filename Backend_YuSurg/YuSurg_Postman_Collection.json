            "url": {
              "raw": "{{baseUrl}}/api/players/me/addxp?xp=100",
              "host": ["{{baseUrl}}"],
              "path": ["api", "players", "me", "addxp"],
              "query": [
                {
                  "key": "xp",
                  "value": "100"
                }
              ]
            },
            "description": "Add 100 XP to authenticated player"
          },
          "response": []
        }
      ]
    },
